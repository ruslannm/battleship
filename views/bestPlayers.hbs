<div class='container m-3'>
  <div class='row'>
    <div class='col-12'>
      <div class='card'>
        <div class='card-body'>
          <table class="table table-striped table-bordered border-primary">
            <thead>
              <tr>
                <th>Игрок</th>
                <th>Рейтинг (Количество побед)</th>
              </tr>
            </thead>
            <tbody>
              {{#each bestPlayers}}
              <tr>
                <td>{{this.username}}</td>
                <td>{{this.amountWin}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>

</div>