<div class='container m-3'>
  {{#if isPostGame}}
    <form class='row my-3' action='/game' , method='post'>
      <div class='row'>
        <div class='d-flex flex-column my-3'>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='first_shooter'
              id='player'
              value='player'
              required
            />
            <label class='form-check-label' for='player'>
              Первый ход игрока
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='first_shooter'
              id='bot'
              value='bot'
            />
            <label class='form-check-label' for='bot'>
              Первый ход бота
            </label>
          </div>
        </div>
      </div>
      <div class='col-6'>
        <button
          id='submit'
          type='submit'
          class='btn btn-outline-success mt-2 ms-2'
        >
          Создать игру
        </button>
      </div>
    </form>
  {{else}}
    <div class='row my-3'>
      <div class='col-6'>
        <a
          href='{{href}}'
          class='btn btn-outline-success'
          role='button'
        >{{gameButtonText}}</a></div>
    </div>
  {{/if}}
  <div class='row'>

    <div class='col-8 col-sm-5 col-md-4 col-lg-3 d-flex flex-column'>
      <div class='card'>
        <div class='card-body'>
          <h5 class='card-header'>Игры</h5>
          <ul class='list-unstyled'>
            {{#each games}}
              <li>{{this.id}}, {{this.status}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>