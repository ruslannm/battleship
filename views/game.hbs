<div class='container m-3'>
  {{#if isStage.isCreateGameStage}}
  <div class="row">
    {{> create-game }}
  </div>
  {{/if}}

  <div class="row">
    <div class="col-12 col-md-6 col-lg-5 col-xl-4">
      <h2><i class="bi bi-person"></i> {{playername}} map</h2>
      {{> map userMap}}
      {{#if isStage.isPlacementStage}}
      {{> dock availableShips}}
      {{/if}}
    </div>

    <div class="col-12 col-md-6 col-lg-5 col-xl-4">
      <h2><i class="bi bi-robot"></i> {{opponentname}} map</h2>
      {{> map opponentMap }}
    </div>
    {{#if isStage.isGamingStage}}
    {{> shots}}
    {{/if}}

  </div>
</div>
<script type='text/javascript' src='/js/game.js'></script>