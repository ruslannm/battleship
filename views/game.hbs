<div class='container m-3'>
  <div class="row">
       <div class="col-12 col-md-6">
        <h2> User map</h2>
      {{> map-grid userPlacement }}
    </div>
    
        <div class="col-12 col-md-6">
          <h2>Bot map</h2>
           <form id="map-opponent-placement" class="row requires-validation" action='/game/shot' , method='post'>
 
          {{> map-grid opponentPlacement }}
          <div class="col-4">
          <button id = "submit-placement" type='submit' class='btn btn-outline-success mt-2 ms-2' value="{{gameId}}">
          Применить
          </button>
          </div>
          </form> 
    </div>

  <div class='col-12 col-md-12 d-flex flex-column'>
    <div class='card'>
      <div class='card-body'>
        <h5 class='card-header'>Выстрелы</h5>
        <ul class='list-unstyled'>
          {{#each shots}}
            <li>{{this.username}}, {{this.cell}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>


  </div>
</div>
