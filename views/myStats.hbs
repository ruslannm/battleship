<div class='container m-3'>
  <div class='row'>
    <div class='col-12'>
      <div class='card'>
        <div class='card-body'>
          <table class="table table-striped table-bordered border-primary">
            <thead>
              <tr>
                <th class='my-stats'>id</th>
                <th class='my-stats'>Первый выстрел</th>
                <th class='my-stats'>Победитель</th>
              </tr>
            </thead>
            <tbody>
              {{#each games}}
              <tr>
                <td class='my-stats'>{{this.gameId}}</td>
                <td class='my-stats'>{{this.firstShooter}}</td>
                <td class='my-stats'>{{this.winner}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>

</div>