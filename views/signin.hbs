<div class='container'>
  <form
    class='needs-validation container-sm border border-warning my-5 px-5 max-width:300px'
    id='post-order'
    action='/signin'
    method='post'
  >
    <div class='mb-3'>
      <label for='exampleFormControlInput2' class='form-label'>Login</label>
      <input
        type='text'
        class='form-control'
        id='exampleFormControlInput2'
        placeholder='username'
        name='username'
        value='{{username}}'
        required
      />
    </div>
    <div class='mb-3'>
      <label for='exampleFormControlInput3' class='form-label'>Password</label>
      <input
        type='password'
        class='form-control'
        id='exampleFormControlInput3'
        placeholder='password'
        name='password'
        required
      />
    </div>
    {{#if isError}}
      <div
        class='toast align-items-center text-black bg-warning border-0'
        role='alert'
        aria-live='assertive'
        aria-atomic='true'
        data-bs-autohide='false'
      >
        <div class='d-flex'>
          <div class='toast-body'>
            Username or password is not allowed.
          </div>
          <button
            type='button'
            class='btn-close btn-close-black me-2 m-auto'
            data-bs-dismiss='toast'
            aria-label='Close'
          ></button>
        </div>
      </div>
    {{/if}}
    <div class='d-flex justify-content-center'>
      <p class='m-auto'>New to our game?
        <a
          class='link-offset-2 link-underline link-underline-opacity-0'
          href='/signup'
        >Create an account</a></p>
    </div>
    <div class='d-flex justify-content-end my-5'>
      <button
        id='submit-button'
        type='submit'
        class='btn btn-outline-success'
      >Sign in</button>
    </div>
  </form>
</div>
<script type='text/javascript' src='/js/toasts.js'></script>