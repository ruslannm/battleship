<div class='container'>
  <form
    class='needs-validation container-sm border border-warning my-5 px-5 max-width:300px'
    id='post-order'
    action='/signup'
    method='post'
  >
    <div class='row my-5'>
      <div class='form-check col-md-6'>
        <input
          class='form-check-input'
          type='radio'
          name='role'
          id='role-waiter'
          value='waiter'
          {{#unless isAdmin}}checked{{/unless }}
        />
        <label class='form-check-label' for='role-waiter'>
          Waiter
        </label>
      </div>
      <div class='form-check col-md-6'>
        <input
          class='form-check-input'
          type='radio'
          name='role'
          id='role-admin'
          value='admin'
          {{#if isAdmin}}checked{{/if }}
        />
        <label class='form-check-label' for='role-admin'>
          Admin
        </label>
      </div>

    </div>
    <div class='mb-3'>
      <label for='exampleFormControlInput1' class='form-label'>Name</label>
      <input
        type='text'
        class='form-control'
        id='exampleFormControlInput1'
        placeholder='name'
        name='name'
        value='{{name}}'
        required
      />
    </div>
    <div class='mb-3'>
      <label for='exampleFormControlInput2' class='form-label'>Login</label>
      <input
        type='text'
        class='form-control'
        id='exampleFormControlInput2'
        placeholder='username'
        name='username'
        value='{{username}}'
        required
      />
    </div>
    {{#if isUsernameNotUnique}}
      <div
        class='toast align-items-center text-black bg-warning border-0'
        role='alert'
        aria-live='assertive'
        aria-atomic='true'
        data-bs-autohide='false'
      >
        <div class='d-flex'>
          <div class='toast-body'>
            Username not unique.
          </div>
          <button
            type='button'
            class='btn-close btn-close-black me-2 m-auto'
            data-bs-dismiss='toast'
            aria-label='Close'
          ></button>
        </div>
      </div>
    {{/if }}
    <div class='mb-3'>
      <label for='exampleFormControlInput3' class='form-label'>Password</label>
      <input
        type='password'
        class='form-control'
        id='exampleFormControlInput3'
        placeholder='password'
        name='password'
        required
      />
    </div>
    <div class='mb-3'>
      <label for='exampleFormControlInput4' class='form-label'>Repeat password</label>
      <input
        type='password'
        class='form-control'
        id='exampleFormControlInput4'
        placeholder='password'
        name='passwordConfirm'
        required
      />
    </div>
    {{#if isPasswordError}}
       <div
        class='toast align-items-center text-black bg-warning border-0'
        role='alert'
        aria-live='assertive'
        aria-atomic='true'
        data-bs-autohide='false'
      >
        <div class='d-flex'>
          <div class='toast-body'>
           The password and confirmation password do not match.
          </div>
          <button
            type='button'
            class='btn-close btn-close-black me-2 m-auto'
            data-bs-dismiss='toast'
            aria-label='Close'
          ></button>
        </div>
      </div>
    {{/if }}
    <div class="d-flex justify-content-center">
    <p class="m-auto">Already have an account? <a class="link-offset-2 link-underline link-underline-opacity-0" href="/signin">Sign in</a></p>
    </div>
    <div class='d-flex justify-content-end my-5'>
      <button
        id='submit-button'
        type='submit'
        class='btn btn-outline-success'
      >Sign up</button>
    </div>
  </form>
</div>
<script type='text/javascript' src='/js/toasts.js'></script>